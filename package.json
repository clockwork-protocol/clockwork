{
    "name": "clockwork-protocol",
    "description": "Recurring ethereum payments",
    "version": "0.0.1",
    "author": "Stephen Young <hello@syoung.org>",
    "license": "MIT",
    "main": "truffle.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "stop": "sudo kill `sudo lsof -t -i:9545`",
        "ganache": "ganache-cli -e 300 -p 9545 -m 'congress false detail border fade run purpose fantasy forum pink inside that' --accounts 30 > /dev/null &",
        "test:gas-reporter": "GAS_REPORTER=true npm run test",
        "test": "npm run ganache sleep 5 && npm run lint ./ && npm run solium && truffle test && npm run stop",
        "coverage": "./node_modules/.bin/solidity-coverage",
        "lint": "eslint ./test",
        "lint:fix": "eslint ./ --fix",
        "solium": "solium -d contracts/",
        "solium:fix": "solium -d contracts/ --fix",
        "build": "npm run clean:contracts && truffle compile",
        "test-ci": "GAS_REPORTER=true npm run ganache sleep 5 && npm run lint ./ && npm run solium && truffle test",
        "testnet:compose": "docker-compose -f eventeum/server/docker-compose.yml up",
        "testnet:migrate": "truffle migrate --network test",
        "testnet:init": "npm run eventeum:subscribe && sleep 2 && node ./scripts/initTestNetwork.js",
        "testnet:up": "npm run testnet:compose & sleep 30 && npm run testnet:migrate && sleep 5 && npm run testnet:init ",
        "testnet:stop": "docker stop server_eventeum_1 && docker stop server_ganache-cli_1 && docker stop server_kafka_1 && docker stop server_zookeeper_1 && docker stop server_mongodb_1 && docker stop server_metabase-app_1 && docker stop server_postgres-db_1",
        "testnet:rm": "docker rm server_eventeum_1 && docker rm server_ganache-cli_1 && docker rm server_kafka_1 && docker rm server_zookeeper_1 && docker rm server_mongodb_1",
        "testnet:down" : "npm run testnet:stop && sleep 5 && npm run testnet:rm",
        "eventeum:subscribe": "./eventeum/subscribers/registerScripts.sh",
        "eventeum:listen": "node eventeum/subscribers/subscribe.js",
        "eventeum:attach": "npm run eventeum:listen"
    },
    "dependencies": {
        "bn.js": "^5.0.0",
        "dotenv": "^8.2.0",
        "ethereumjs-wallet": "^0.6.3",
        "openzeppelin-solidity": "^2.1.2",
        "truffle": "^5.1.1",
        "truffle-hdwallet-provider": "^1.0.2",
        "web3": "^1.2.4",
        "webpack": "^4.29.0"
    },
    "devDependencies": {
        "@openzeppelin/test-helpers": "^0.5.4",
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.0.3",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-stage-2": "6.24.1",
        "babel-preset-stage-3": "6.24.1",
        "babel-register": "6.26.0",
        "chai": "4.2.0",
        "chai-as-promised": "7.1.1",
        "chai-bignumber": "3.0.0",
        "coveralls": "^3.0.8",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.6.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-compat": "^3.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-promise": "^4.0.2",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-standard": "^4.0.0",
        "eth-gas-reporter": "^0.2.12",
        "ganache-cli": "^6.2.5",
        "mocha-junit-reporter": "^1.18.0",
        "mocha-multi-reporters": "^1.1.7",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1",
        "prettier-plugin-solidity-refactor": "^1.0.0-alpha.14",
        "solidity-coverage": "0.6.7",
        "solium": "^1.2.5",
        "truffle-assertions": "^0.9.2"
    }
}
